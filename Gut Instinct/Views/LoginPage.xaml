<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gut_Instinct.Views.LoginPage"
             xmlns:vm="clr-namespace:Gut_Instinct.Models"
             x:DataType="vm:LoginVM"
             Background="#efd9fd"
             Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30, 0" VerticalOptions="Center">
            <Image Source="gut_instinct_logo.png" Margin="0, 0, 0, 15"/>
            <Frame Padding="12, 5">
                <Entry Placeholder="Email" Text="{Binding EmailText}"/>
            </Frame>
            <Frame Padding="12, 5">
                <Entry Placeholder="Password" IsPassword="True" Text="{Binding PasswordText}"/>
            </Frame>
            <Button Text="Login" Command="{Binding LoginCommand}"/>
            <Button Text="Create Account" Background="Transparent" Command="{Binding CreateAccountCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>